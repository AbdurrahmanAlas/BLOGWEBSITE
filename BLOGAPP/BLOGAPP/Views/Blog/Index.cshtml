@model IEnumerable<BLOGAPP.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>BLOG LİSTESİ</h2> 

<hr />

<p>
    @Html.ActionLink("Yeni Blog Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.KategoriAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baslık)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Resim)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.EklenmeTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Onay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anasayfa)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.KategoriAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baslık)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Resim)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.EklenmeTarihi)
            </td>
            <td>
                @if (item.Onay)
                {
                    <label class="label label-success">ONAYLI</label>
                }
                else
                {
                    <label class="label label-danger">ONAY BEKLİYOR</label>
                }


                @Html.DisplayFor(modelItem => item.Onay)
            </td>
            <td>
                @if (item.Anasayfa)
                {
                    <label class="label label-success">ANASAYFA</label>
                }
                else
                {
                    <label class="label label-danger">ANASAYFA DEĞİL</label>
                }
                @Html.DisplayFor(modelItem => item.Anasayfa)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })

                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
