@model IEnumerable<BLOGAPP.Models.CategoryModel>
@{
    ViewBag.Title = "Index";
}

<h2>KATEGORİ LİSTESİ</h2>
<hr />






<p>
    <br />
    @Html.ActionLink("KATEGORİ EKLE", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />

@if (TempData["Kategori"] != null)
{
    var kategori = (BLOGAPP.Models.Category)TempData["Kategori"];
    <div class="alert alert-success">
        <span class="glyphicon glyphicon-ok"></span>
        <b> @kategori.KategoriAd</b> Kayıt edildi.

    </div>

}






<table class="table table-bordered table-hover table-striped">
    <tr>
        <th style="width:70%">
            @Html.DisplayNameFor(model => model.KategoriAd)
        </th>
        <th style="width:16%">
            @Html.DisplayNameFor(model => model.Blogsayısı)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.KategoriAd
            </td>
            <td>
                @item.Blogsayısı
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
